{
  "swagger": "2.0",
  "info": {
    "title": "Neuro API",
    "description": "Description",
    "version": "1.0.0"
  },
  "host": ["localhost:4000"],
  "basePath": "/",
  "schemes": ["http", "https"],
  "paths": {
    "/auth/login": {
      "post": {
        "tags": ["Admin Auth"],
        "summary": "Login for Admin Controller",
        "description": "Endpoint for administrators to log in, providing email, password, and optionally device info and device type",
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/components/schemas/loginAdminResponse"
            },
            "description": "OK"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 6
                  }
                }
              }
            }
          }
        }
      }
    },
    "admin/create-doctor": {
      "post": {
        "tags": ["Admin Doctor"],
        "summary": "Admin creates doctor",
        "description": "",
        "responses": {
          "201": {
            "description": "Created"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/createDoctorRequest"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "createDoctorRequest": {
        "firstName": "John",
        "lastName": "Doe",
        "role": "PHYSIO",
        "address": "Kapan"
      }
    },
    "parameters": {}
  }
}
